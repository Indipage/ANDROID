<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_tutorial_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_title_collection"
            android:textAppearance="@style/TextAppearance.IndiPage.En.Body01"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_tutorial_collection_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:gravity="center"
            android:text="@string/tutorial_collection"
            android:textAppearance="@style/TextAppearance.IndiPage.Body05"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tutorial_collection" />


        <ImageView
            android:layout_width="149dp"
            android:layout_height="236dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/img_tutorial_collection1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_tutorial_collection_2"
            app:layout_constraintTop_toBottomOf="@id/tv_tutorial_collection_detail" />

        <ImageView
            android:id="@+id/iv_tutorial_collection_2"
            android:layout_width="210dp"
            android:layout_height="324dp"
            android:src="@drawable/img_tutorial_collection2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tutorial_collection_detail" />

        <ImageView
            android:layout_width="149dp"
            android:layout_height="236dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/img_tutorial_collection3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_tutorial_collection_2"
            app:layout_constraintTop_toBottomOf="@id/tv_tutorial_collection_detail" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>