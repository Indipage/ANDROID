<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_article_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/menu_article_detail_app_bar"
            app:navigationIcon="@drawable/ic_article_detail_arrow"
            app:title="@string/article_detail_tool_bar_title"
            app:titleTextAppearance="@style/TextAppearance.IndiPage.Sub_Head01" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/sv_article_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar_article_detail"
            tools:ignore="SpeakableTextPresentCheck">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/iv_article_detail_place_image"
                    android:layout_width="match_parent"
                    android:layout_height="228dp"
                    android:contentDescription="@string/article_detail_place_image_description"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ppp_club_img" />

                <TextView
                    android:id="@+id/tv_article_detail_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:text="@string/article_detail_author"
                    android:textAppearance="@style/TextAppearance.IndiPage.Caption01"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_article_detail_place_image" />

                <TextView
                    android:id="@+id/tv_article_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="27px"
                    android:text="@string/article_detail_title"
                    android:textAppearance="@style/TextAppearance.IndiPage.Sub_Head01"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_article_detail_author" />


                <TextView
                    android:id="@+id/tv_article_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/article_detail_date"
                    android:textAppearance="@style/TextAppearance.IndiPage.Caption02"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_article_detail_title"
                    tools:ignore="SmallSp,TextSizeCheck" />

                <TextView
                    android:id="@+id/tv_article_detail_move_to_place_detail_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:background="@color/indi_black"
                    android:paddingHorizontal="32dp"
                    android:paddingTop="21dp"
                    android:text="나만 알고싶은"
                    android:textAppearance="@style/TextAppearance.IndiPage.Caption01"
                    android:textColor="@color/indi_green"
                    app:layout_constraintTop_toBottomOf="@id/tv_article_detail_date" />

                <TextView
                    android:id="@+id/tv_article_detail_move_to_place_detail_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/indi_black"
                    android:drawableEnd="@drawable/ic_article_detail_go_to_place_detail_arrow"
                    android:paddingHorizontal="32dp"
                    android:paddingBottom="21dp"
                    android:text="문학살롱 초고\n바로가기"
                    android:textAppearance="@style/TextAppearance.IndiPage.Body03"
                    android:textColor="@color/indi_green"
                    app:layout_constraintBottom_toTopOf="@id/view_article_detail_1"
                    app:layout_constraintTop_toBottomOf="@id/tv_article_detail_move_to_place_detail_1" />

                <View
                    android:id="@+id/view_article_detail_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="13dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/indi_gray200"
                    app:layout_constraintTop_toBottomOf="@id/tv_article_detail_move_to_place_detail_2" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_article_detail_article_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/view_article_detail_1" />


                <View
                    android:id="@+id/view_article_detail_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="13dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/indi_gray200"
                    app:layout_constraintTop_toBottomOf="@id/rv_article_detail_article_body" />

                <TextView
                    android:id="@+id/tv_article_detail_ticket_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="114dp"
                    android:layout_marginTop="56dp"
                    android:text="@string/article_detail_ticket_title"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.IndiPage.Sub_Head01"
                    app:layout_constraintTop_toBottomOf="@id/view_article_detail_2" />

                <TextView
                    android:id="@+id/tv_article_detail_ticket_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="56dp"
                    android:layout_marginTop="19dp"
                    android:lineSpacingExtra="24px"
                    android:text="@string/article_detail_ticket_detail"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.IndiPage.Body05"
                    app:layout_constraintTop_toBottomOf="@id/tv_article_detail_ticket_title" />

                <ImageView
                    android:id="@+id/iv_article_detail_ticket_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="58dp"
                    android:layout_marginBottom="92dp"
                    android:contentDescription="@string/article_detail_ticket_image_description"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_article_detail_ticket_detail"
                    app:srcCompat="@drawable/ppp_club_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>